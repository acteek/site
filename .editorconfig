# Check http://editorconfig.org for more information
# This is the main config file for this project:
root = true

[*]
charset = utf-8
indent_style = spaces
trim_trailing_whitespace = true
end_of_line = lf
insert_final_newline = true

[*.html]
indent_style = space
indent_size = 2

[*.{ex,exs,exx}]
indent_style = space
indent_size = 2

[*.js]
indent_style = space
indent_size = 2

[*.scss]
indent_style = space
indent_size = 2
